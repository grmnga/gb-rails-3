.content
  .container
    .inner-wrapper
      .primary
        main#main.site-main[role="main"]
          - @posts.each do |post|
            article.item
              .item-content-wrapper
                .item-header
                  h2.item-title
                    = link_to post.title, post
                .item-content
                  p
                    = post.body
                    = link_to "Читать далее …", post, :class => 'read-more'
              .item-footer
                span.posted-on
                  = post.created_at.strftime("%d-%m-%Y")
                span.byline
                  = post.user.name
                span.comments-link
                  a[href="#"]
                    | Leave a comment
                span.cat-links
                  a[href="#"]
                    | Настройка оборудования
                span.tags-links
                  a[href="#"]
                    | CCNA
                  | ,
                  a[href="#"]
                    | CCNP
                  | ,
                  a[href="#"]
                    | CISCO
                  | ,
                  a[href="#"]
                    | OSPF
                  | ,
                  a[href="#"]
                    | Настройка OSPF


/h1 Listing posts

/table
  thead
    tr
      th Title
      th Body
      th User
      th Disactive
      th
      th
      th

  tbody
    - @posts.each do |post|
      tr
        td = post.title
        td = post.body
        td = post.user.name
        td = post.disactive
        td = link_to 'Show', post
        td = link_to 'Edit', edit_post_path(post)
        td = link_to 'Destroy', post, data: { confirm: 'Are you sure?' }, method: :delete

/br

/= link_to 'New Post', new_post_path
